<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adding_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.simpleflashcardsapp.ui.addingcards.AddingCardsFragment">

    <EditText
        android:id="@+id/et_word_to_translate"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="2"
        tools:text="@tools:sample/lorem/random"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_translate_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_word_to_translate"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        />

    <EditText
        tools:text="@tools:sample/lorem/random"
        android:id="@+id/et_translated_word"
        android:layout_width="0dp"
        app:layout_constraintVertical_bias="0.15"
        android:layout_height="200dp"
        android:gravity="start"
        android:maxLines="3"
        android:ellipsize="end"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/et_word_to_translate"
        app:layout_constraintStart_toStartOf="@id/et_word_to_translate"
        app:layout_constraintTop_toBottomOf="@id/btn_translate_word"
        />

    <ProgressBar
        android:id="@+id/pb_word_translated"
        app:layout_constraintStart_toStartOf="@id/et_translated_word"
        app:layout_constraintBottom_toBottomOf="@id/et_translated_word"
        app:layout_constraintTop_toTopOf="@id/et_translated_word"
        app:layout_constraintEnd_toEndOf="@id/et_translated_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>